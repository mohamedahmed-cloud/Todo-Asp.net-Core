@model Category
@{
    var action = Model == null ? "saveCategory" : "SaveUpdateCategory";
    var buttonText = Model == null ? "Add New Category" : "Update Category";
}

<form class= "category-form" asp-controller="Category" asp-action="@action" method="post" asp-route-id = "@Model?.Id">
   <section class = "contain">
      
      <div class="form-group">
        <label for="category">Category</label>
        <input type="text" class="form-control" id="category" placeholder="Category" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>

      <div >
        <button type = "submit" class = "btn btn-dark">@buttonText</button>
        <a asp-controller="Category" asp-action = "Index">Go Back</a>

      </div>
  </section>
</form>
@*Scripts*@
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src = "~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<style >
    .category-form {
        width:min(400px, 97vw);
        margin-left:auto;
        margin-right:auto;
        display:flex;
        align-items:center;
        justify-content:center;
        flex-direction:column;
        height:91.6vh;
    }
    .contain {
        background-color:#222;
        padding:50px;
        border-radius:18px;
        box-shadow: 0px 0px 18px 5px #212529;
    }
    .contain label {
        color:#fff;
        margin:7px 0px;
    }
    .contain div:nth-of-type(2) {
        margin-top:20px;
    }
    .contain div:nth-of-type(2) a {
        text-decoration:none;
        color:#fff;
    }
    .contain div:nth-of-type(2) a:hover {
        color:red;
        font-size:18px;
    }
    div input {
        width:min(350px, 94vw) !important;
    }
</style>
