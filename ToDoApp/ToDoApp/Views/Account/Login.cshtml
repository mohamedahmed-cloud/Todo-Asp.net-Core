@model LoginCred


<form class= "login-form" asp-action="SaveLogin" asp-controller="Account" method="post">
   <section class = "contain">
       <p class="text-danger  text-center">@ViewBag.ErrorMessage</p>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
      </div>

      <div >
        <button type = "submit" class = "btn btn-dark">Login</button>
        <a asp-controller="Account" asp-action = "SignIn">sign in</a>

      </div>
  </section>
</form>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


<style >
.login-form {
    width:min(400px, 97vw);
    margin-left:auto;
    margin-right:auto;
    display:flex;
    align-items:center;
    justify-content:center;
    flex-direction:column;
    height:91.6vh;
}
.contain {
    background-color:#222;
    padding:50px;
    border-radius:18px;
    box-shadow: 0px 0px 18px 5px #212529;
}
.contain label {
    color:#fff;
    margin:7px 0px;
}
.contain div:nth-of-type(3) {
    margin-top:20px;
}
.contain div:nth-of-type(3) a {
    text-decoration:none;
    color:#fff;
}
.contain div:nth-of-type(3) a:hover {
    color:red;
    font-size:18px;
}
div input {
    width:min(350px, 94vw) !important;
}
</style>
